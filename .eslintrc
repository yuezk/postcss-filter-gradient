{
    "rules": {
        "no-unused-expressions": [0],
        "no-underscore-dangle":  [0],
        "quote-props":           [2, "as-needed"],
        "no-multi-spaces":       [0],
        "no-extra-parens":       [2],
        "no-unused-vars":        [2],
        "no-loop-func":          [0],
        "key-spacing":           [0],
        "no-shadow":             [0],
        "max-len":               [2, 120],
        "strict":                [0],
        "indent":                [2],
        "quotes":                [2, "single", "avoid-escape"],
        "curly":                 [0]
    },
    "env": {
        "mocha": true,
        "node":  true
    }
}
